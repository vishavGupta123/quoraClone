<html>
  <head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css"
    />
    <script src="https://www.google.com/recaptcha/api.js?render=<6LeuvP8UAAAAAAcILCHsf7x_aRZyr_q1tjPJ-sq0>"></script>
  </head>
  <body>
    <form action="/users/forget-password" method="POST" id="forgetPasswordForm">
      <input type="email" name="email" placeholder="Enter your email address" />
      <div
        class="g-recaptcha"
        data-sitekey="6LeuvP8UAAAAAAcILCHsf7x_aRZyr_q1tjPJ-sq0"
      ></div>
      <input type="submit" value="Submit" />
    </form>

    <script>
      <% if(flash.success && flash.success.length>0) {%>
        new Noty({
            theme:'relax',
            text:'<%= flash.success %>',
            type:'success',
            layout:'topCenter',
            timeout:'2000'
        }).show()

          <%}%>
          $(document).ready(function(){
            $('#forgetPasswordForm').submit(function(){
                $(this).ajaxSubmit({
                    error:function(xhr){
                        status('Error '+xhr.status)
                    },
                    success:function(response){
                        console.log(response)
                    }
                })
                return false;
            })
          })
    </script>
  </body>
</html>
